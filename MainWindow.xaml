<Window x:Class="YourNamespace.WelcomePage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="400" Width="300"
          WindowState="Maximized"
        Background="#002A5A">
    <!-- Dark blue background color -->
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <!-- Title Text -->
        <TextBlock FontSize="24" Text="Libook"
                   Foreground="White"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Subtitle Text -->
        <TextBlock FontSize="16" Text="I Am"
                   Foreground="White"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Admin Button -->
        <Button Content="Admin"
                Width="200" Height="40"
                Background="#F2F2D0"
                Foreground="#002A5A"
                FontSize="16"
                Margin="0,10"
                HorizontalAlignment="Center"
                Click="AdminButton_Click"/>

        <!-- User Button -->
        <Button Content="User"
                Width="200" Height="40"
                Background="#F2F2D0"
                Foreground="#002A5A"
                FontSize="16"
                Margin="0,10"
                HorizontalAlignment="Center"
                Click="UserButton_Click"/>
    </StackPanel>
</Window>
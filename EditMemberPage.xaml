<Page x:Class="YourNamespace.EditMembersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="EditMembersPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Edit Member Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBox x:Name="MemberIdTextBox" Width="300" Margin="0,10" Text="Enter Member ID" />
            <TextBox x:Name="NameTextBox" Width="300" Margin="0,10" Text="Enter Member Name" />
            <TextBox x:Name="EmailTextBox" Width="300" Margin="0,10" Text="Enter Email Address" />
            <TextBox x:Name="PhoneTextBox" Width="300" Margin="0,10" Text="Enter Phone Number" />

            <Button Content="Save Changes" Click="SaveChanges" Width="120" Margin="0,20" />
        </StackPanel>
    </Grid>
</Page>

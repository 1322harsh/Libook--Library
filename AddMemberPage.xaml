<Page x:Class="YourNamespace.AddMembersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddMembersPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Add a New Member" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBox x:Name="NameTextBox" Width="300" Margin="0,10" Text="Enter Member Name" />
            <TextBox x:Name="EmailTextBox" Width="300" Margin="0,10" Text="Enter Email Address" />
            <TextBox x:Name="PhoneTextBox" Width="300" Margin="0,10" Text="Enter Phone Number" />

            <Button Content="Save Member" Click="SaveMember" Width="100" Margin="0,20" />
        </StackPanel>
    </Grid>
</Page>

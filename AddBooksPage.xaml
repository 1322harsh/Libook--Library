<Page x:Class="YourNamespace.AddBooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddBooksPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Add a New Book" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBox x:Name="TitleTextBox" Width="300" Margin="0,10" Text="Enter Book Title" />
            <TextBox x:Name="AuthorTextBox" Width="300" Margin="0,10" Text="Enter Author Name" />
            <TextBox x:Name="ISBNTextBox" Width="300" Margin="0,10" Text="Enter ISBN" />

            <Button Content="Save Book" Click="SaveBook" Width="100" Margin="0,20" />
        </StackPanel>
    </Grid>
</Page>
